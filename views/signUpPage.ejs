<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>members_only</title>
  <link rel="stylesheet" href="/styles.css">
</head>

<body>
  <%- include('navbar', {navbarLinks:navbarLinks}) %>
    <form action="/sign-up" method="post" class="signup-form" novalidate>
      <h1 class="sign-up-heading">SIGN UP</h1>
      <div class="signup-form-div">
        <label for="username">username *</label>
        <input type="text" id="username" name="username" />
      </div>
      <div class="signup-form-div">
        <label for="email">email *</label>
        <input type="email" id="email" name="email" />
      </div>
      <div class="signup-form-div">
        <label for="password">password *</label>
        <input type="password" id="password" name="password" />
      </div>

      <div class="signup-form-div admin-password-div">
        <label for="admin-password">Make admin password?</label>
        <input type="password" id="admin-password" name="admin-password" />
      </div>

      <div class="signup-form-div is-admin-div">
        <div class="inner-is-admin-div">
          <label for="is-admin" class="is-admin-label">Is admin?</label>
        <input type="checkbox" name="is-admin" id="is-admin" />
        </div>
      </div>
      <%- include("partials/errors.ejs") %>
        <button type="submit" class="signup-button"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
            viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
            stroke-linejoin="round" class="lucide lucide-user-round-check-icon lucide-user-round-check">
            <path d="M2 21a8 8 0 0 1 13.292-6" />
            <circle cx="10" cy="8" r="5" />
            <path d="m16 19 2 2 4-4" />
          </svg> SIGN UP</button>
    </form>

    <script>
  const isAdmin = document.querySelector("#is-admin"); 
  const adminPasswordDiv = document.querySelector(".admin-password-div");

  isAdmin.addEventListener("change", () => {
    if (isAdmin.checked) {
      adminPasswordDiv.style.display = "block"; // show if admin
    } else {
      adminPasswordDiv.style.display = "none";  // hide if not admin
    }
  });
</script>
</body>

</html>